{
  "openapi": "3.0.0",
  "info": {
    "title": "Pets API",
    "version": "1.0.0",
    "description": "API for retrieving pet information."
  },
  "servers": [
    {
      "url": "https://660579c92ca9478ea1806a31.mockapi.io/api/v1"
    }
  ],
  "paths": {
    "/pets": {
      "get": {
        "summary": "List all pets",
        "tags": ["Pets"], 
        "responses": {
          "200": {
            "description": "A list of pets.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GetPetsResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pets/{id}": {
      "get": {
        "summary": "Get a pet by ID",
        "tags": ["Pets"], 
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the pet to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested pet.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetPetByIdResponse"
                }
              }
            }
          },
          "404": {
            "description": "Pet not found."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetPetsResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The pet's unique ID."
          },
          "dateAdded": {
            "type": "string",
            "description": "The creation date of the pet record",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "description": "The pet's name."
          },
          "photoUrl": {
            "type": "string",
            "description": "URL of the pet."
          },
          "species": {
            "type": "string",
            "description": "The pet's species."
          },
          "available": {
            "type": "boolean",
            "description": "Whether the pet is available for adoption."
          },
          "birthYear": {
            "type": "integer",
            "description": "The pet's birth year."
          }
        }
      },
      "GetPetByIdResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The pet's unique ID."
          },
          "dateAdded": {
            "type": "string",
            "description": "The creation date of the pet record",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "description": "The pet's name."
          },
          "photoUrl": {
            "type": "string",
            "description": "URL of the pet."
          },
          "species": {
            "type": "string",
            "description": "The pet's species."
          },
          "available": {
            "type": "boolean",
            "description": "Whether the pet is available for adoption."
          },
          "birthYear": {
            "type": "integer",
            "description": "The pet's birth year."
          }
        }
      }
    }
  }
}
