{
  "openapi": "3.0.0",
  "info": {
    "title": "Pets API",
    "version": "1.0.0",
    "description": "API for retrieving pet information."
  },

  "paths": {
    "/pets": {
      "get": {
        "summary": "List all pets",
        "tags": ["Pets"],
        "responses": {
          "200": {
            "description": "A list of pets.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GetPetsResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetPetsResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The pet's unique ID."
          },
          "dateAdded": {
            "type": "string",
            "description": "The creation date of the pet record",
            "format": "date-time"
          },
          "name": {
            "type": "string",
            "description": "The pet's name."
          },
          "photoUrl": {
            "type": "string",
            "description": "URL of the pet."
          },
          "species": {
            "type": "string",
            "description": "The pet's species."
          },
          "available": {
            "type": "boolean",
            "description": "Whether the pet is available for adoption."
          },
          "birthYear": {
            "type": "integer",
            "description": "The pet's birth year."
          }
        }
      }
    }
  }
}
